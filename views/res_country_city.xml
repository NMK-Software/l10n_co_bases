<odoo>
  <data>
    <record id="res_country_city_form" model="ir.ui.view">
      <field name="model">res.country.city</field>
      <field name="name">ResCountryCity Form</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="country_id"/>
              <field name="name"/>
              <field name="code"/>
              <field name="state_id"/>
              <field name="postal_code"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="res_country_city_tree" model="ir.ui.view">
      <field name="model">res.country.city</field>
      <field name="name">ResCountryCity Form</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="code"/>
          <field name="state_id"/>
          <field name="postal_code"/>
        </tree>
      </field>
    </record>

    <record id="action_res_country_city" model="ir.actions.act_window">
      <field name="name">ResCountryCity Action</field>
      <field name="res_model">res.country.city</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,kanban,form</field>
    </record>
  </data>
</odoo>